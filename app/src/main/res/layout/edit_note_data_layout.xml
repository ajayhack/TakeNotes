<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/pad_16">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_note"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enter_note_value"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:maxLines="5"
            android:padding="@dimen/pad_8"
            android:gravity="start"
            android:inputType="textCapSentences"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
            android:textColorHint="@color/edittext_border"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_medium"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_note"
        android:layout_marginTop="@dimen/pad_16"
        android:gravity="end">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="120dp"
            android:layout_height="?attr/actionBarSize"
            android:text="@string/cancel"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_medium"
            android:background="@color/colorRed"/>

        <Button
            android:id="@+id/updateButton"
            android:layout_width="120dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="@dimen/pad_8"
            android:text="@string/update"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_medium"
            android:background="@color/colorGreen"/>
    </LinearLayout>

</RelativeLayout>